				el: '#main_nav',
				data: {
					navigation: [
						{
							href: '/', 
							name: 'Home'
						},
						{
							href: '/beertestcrud/', 
							name: 'Beer test-CRUD'
						}
					]
				},
				computed: {
					activePage: function() {
						var url =  window.location.href.split('/')[3];
						console.log(url);
						return url;
					}
				}
			})			
		block content

